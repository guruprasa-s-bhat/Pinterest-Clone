<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Profile Page</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link rel="stylesheet" href="/stylesheets/created.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <img
          src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png"
          alt="pin logo"
          class="img1"
          width="50"
          height="40"
        />
        <span style="color: red; font-weight: bold; font-size: larger"
          >Pinterest</span
        >
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/feed">Feed</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/upload">Create</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="containerpers">
      <div class="cardpers">
        <div
          class="profile-picture"
          data-bs-toggle="modal"
          data-bs-target="#updateProfilePicModal"
        >
          <img
            src="/images/uploads/<%= user.dp || 'default-profile.png' %>"
            alt="Profile Picture"
            style="cursor: pointer"
          />
        </div>
        <h2 class="name"><%= user.fullname %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline"><%= user.tagline || 'Add Tagline' %></p>
        <p class="description">
          <%= user.description || 'Add description about your profile' %>
        </p>
        <a class="button" href="/edit">Edit Profile</a>
        <br /><br />
        <br /><br />
        <a href="/create" class="create">Created</a>
        <a href="/saved" class="saved">Saved</a>
        <br /><br />
      </div>
    </div>

    <!-- Modal for updating profile picture -->
    <div
      class="modal fade"
      id="updateProfilePicModal"
      tabindex="-1"
      aria-labelledby="updateProfilePicModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateProfilePicModalLabel">
              Update Profile Picture
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form
              action="/update-profile-picture"
              method="post"
              enctype="multipart/form-data"
            >
              <input type="file" name="dp" accept="image/*" required />
              <button type="submit" class="btn btn-primary mt-2">
                Update Profile Picture
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
